<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
         
    <display-name>Projeto Locadora</display-name>
    
    <!-- Configuração do mapeamento do servlet -->
    <servlet>
        <servlet-name>ListarAtorController</servlet-name>
        <servlet-class>projeto.controller.ListarAtorController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ListarAtorController</servlet-name>
        <url-pattern>/listarAtor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CadastrarAtorController</servlet-name>
        <servlet-class>projeto.controller.CadastrarAtorController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CadastrarAtorController</servlet-name>
        <url-pattern>/salvarAtor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditarAtorController</servlet-name>
        <servlet-class>projeto.controller.EditarAtorController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EditarAtorController</servlet-name>
        <url-pattern>/editarAtor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExcluirAtorController</servlet-name>
        <servlet-class>projeto.controller.ExcluirAtorController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ExcluirAtorController</servlet-name>
        <url-pattern>/excluirAtor</url-pattern>
    </servlet-mapping>
</web-app>
